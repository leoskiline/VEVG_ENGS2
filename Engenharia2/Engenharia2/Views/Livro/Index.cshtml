@{
    ViewData["Title"] = "Cadastrar Livro";
}
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Pagina Cadastro de Livro</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="~/Home">Home</a></li>
                    <li class="breadcrumb-item active">Gerenciar Livro</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<div class="content">
    <div class="container-fluid">
        <div class="">
            <form>
                <div class="form-group">
                    <label class="control-label col-sm-2" for="nome"><span style="color:red;">*</span>Título:</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="nome" placeholder="Digite o Nome do livro">
                        <input type="hidden" id="idLivro" value="0"/>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="nome"><span style="color:red;">*</span>Quantidade:</label>
                    <div class="col-sm-2">
                        <input type="text" class="form-control" id="qtd" placeholder="Digite a Quantidade">
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="editora"><span style="color:red;">*</span>Editora:</label>
                    <div class="col-sm-2">
                        <select class="custom-select" id="editoraId" name="editoraId">
                            <!-- Carregado por Ajax -->
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-sm-2" for="autor"><span style="color:red;">*</span>Autor:</label>
                    <div class="col-sm-2">
                        <select data-select class="custom-select" id="autorId" name="autorId" multiple>
                            <!-- Carregado por Ajax -->
                        </select>
                    </div>
                    <span>Os campos com <span style="color:red;">*</span> são obrigatórios.</span>
                </div>


                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="button" class="btn btn-success" onclick="indexLivro.enviar()">Cadastrar</button>
                    </div><br />
                    <div class="col-sm-3" id="gravando">
                        <!-- Carregado por Ajax -->
                    </div>
                    <div class="col-sm-3" id="gravou">
                        <!-- Carregado por Ajax -->
                    </div>
                </div>
            </form>
            <div class="center">
                <div class="row">
                    <h2 class="m-1">Lista de Livros</h2>
                    <p class="col-sm-3"></p>
                    <input type="text" class="form-control col-sm-2 m-1" id="pesquisaLivro" placeholder="Digite o termo a ser pesquisado" value="" />
                    <input type="button" class="form-control col-1 btn-dark m-1" value="Pesquisar" onclick="indexLivro.pesquisar()" />
                    <label class="mt-2">Tipo de Pesquisa:</label>
                    <select class="form-control col-sm-1 ml-2 m-1" id="tipoPesquisa">
                        <option>Nome</option>
                        <option>Editora</option>
                    </select>
                </div>
                <table id="tabela" class="table table-bordered table-hover">
                    <thead>
                        <tr class="text-center">
                            <th>ID</th>
                            <th>Titulo</th>
                            <th>Quantidade</th>
                            <th>Editora</th>
                            <th>Autor</th>
                            <th>Apagar</th>
                            <th>Alterar</th>
                        </tr>
                    </thead>
                    <tbody id="corpo-tabela">
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
@section javascript {
    <script src="~/js/views/livro/Index.js"></script>
    <script src="~/js/views/livro/ListarAutores.js"></script>
    <script src="~/js/views/livro/ListarEditoras.js"></script>
    <script src="~/lib/HTTPClient.js"></script>
}

